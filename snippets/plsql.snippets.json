{
    "package..spec": {
        "prefix": "pkg",
        "body": [
            "create or replace package ${1:name}",
            "as",
            "  $0",
            "end $1;"
        ],
        "description": "Package specification"
    },
    "package..body": {
        "prefix": "pkgb",
        "body": [
            "create or replace package body ${1:name}",
            "as",
            "  $0",
            "end $1;"
        ],
        "description": "Package body"
    },

    "func..spec": {
        "prefix": "fns",
        "body": [
            "function ${1:name}(",
            "  ${2:param} in ${3:param_type}",
            ") return ${4:return_type};"
        ],
        "description": "Function specification"
    },
    "func": {
        "prefix": "fn",
        "body": [
            "function ${1:name}(",
            "  ${2:param} in ${3:param_type}",
            ") return ${4:return_type}",
            "is",
            "begin",
            "  $0",
            "end $1;"
        ],
        "description": "Function body"
    },

    "proc..spec": {
        "prefix": "prs",
        "body": [
            "procedure ${1:name}(",
            "  ${2:param} in ${3:param_type}",
            ");"
        ],
        "description": "Procedure specification"
    },
    "proc": {
        "prefix": "pr",
        "body": [
            "procedure ${1:name}(",
            "  ${2:param} in ${3:param_type}",
            ")",
            "is",
            "begin",
            "  $0",
            "end $1;"
        ],
        "description": "Procedure body"
    },

    "begin..end": {
        "prefix": "beg",
        "body": [
            "begin",
            "  $0",
            "end;"
        ],
        "description": "BEGIN..END block"
    },

    "if..end": {
        "prefix": "if",
        "body": [
            "if ${1:condition} then",
            "  $0",
            "end if;"
        ],
        "description": "IF block"
    },
    "if..else..end": {
        "prefix": "ifel",
        "body": [
            "if ${1:condition} then",
            "  $2",
            "else",
            "  $3",
            "end if;"
        ],
        "description": "IF/ELSE block"
    },
    "elsif..": {
        "prefix": "elsif",
        "body": [
            "elsif ${1:condition} then",
            "  $0"
        ],
        "description": "ELSIF branch"
    },

    "case..when..end": {
        "prefix": "case",
        "body": [
            "case $1",
            "  when ${2:condition} then $3",
            "  else $4",
            "end;"
        ],
        "description": "CASE expression"
    },
    "when..then": {
        "prefix": "when",
        "body": [
            "when ${1:condition} then $2"
        ],
        "description": "WHEN branch"
    },

    "loop..end": {
        "prefix": "loop",
        "body": [
            "loop",
            "  $0",
            "end loop;"
        ],
        "description": "LOOP"
    },

    "for..in": {
        "prefix": "forr",
        "body": [
            "for $1 in $2 loop",
            "  $0",
            "end loop;"
        ],
        "description": "FOR loop"
    },

    "for..in..collection": {
        "prefix": "forc",
        "body": [
            "for i in 1..${1:collection}.count loop",
            "  $0",
            "end loop;"
        ],
        "description": "FOR collection loop"
    },

    "exception_no_data": {
        "prefix": "exn",
        "body": [
            "exception",
            "  when no_data_found then",
            "    $1;"
        ],
        "description": "Exception handler: NO_DATA_FOUND"
    },
    "exception_too_many": {
        "prefix": "ext",
        "body": [
            "exception",
            "  when too_many_rows then",
            "    $1;"
        ],
        "description": "Exception handler: TOO_MANY_ROWS"
    },
    "exception_others": {
        "prefix": "exo",
        "body": [
            "exception",
            "  when ${1:others} then",
            "    ${2:null};"
        ],
        "description": "Exception handler: OTHERS"
    },

    "raise_application_error": {
        "prefix": "raise",
        "body": [
            "raise_application_error(${1:-20000}, '${2:message}');"
        ],
        "description": "raise application error"
    },
    "dbms_output.put_line": {
        "prefix": "out",
        "body": [
            "dbms_output.put_line('${1:message}');"
        ],
        "description": "DBMS_OUTPUT.PUT_LINE"
    },

    "select": {
        "prefix": "select",
        "body": [
            "select ${1:field}",
            "  ${2:into ${3:variable}}",
            "  from ${4:table}",
            " where ${5:condition}"
        ],
        "description": "select"
    },
    "insert": {
        "prefix": "insert",
        "body": [
            "insert into ${1:table} ${2:(${3:column})}",
            "values ${4:(${5:values})}"
        ],
        "description": "insert"
    },
    "update": {
        "prefix": "update",
        "body": [
            "update ${1:table}",
            "   set ${2:field}=${3:value}",
            " where ${4:condition}"
        ],
        "description": "update"
    },
    "delete": {
        "prefix": "delete",
        "body": [
            "delete from ${1:table}",
            " where ${2:condition}"
        ],
        "description": "delete"
    }
}
